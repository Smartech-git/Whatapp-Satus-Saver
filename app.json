{
  "expo": {
    "name": "Status Saver",
    "owner": "chukwusmart",
    "slug": "status-saver",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover"
    },
    "primaryColor": "#00D426",
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(Status Saver) to access your photos.",
          "savePhotosPermission": "Allow $(Status Saver) to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow $(Status Saver) to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow $(Status Saver) to save photos."
      },
      "bundleIdentifier": "com.chukwusmart.statussaver"
    },
    "androidStatusBar": {
      "barStyle": "light-content",
      "backgroundColor": "#00D426"
    },
    "androidNavigationBar": {
      "backgroundColor": "#00D426",
      "barStyle": "light-content"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00D426"
      },
      "package": "com.chukwusmart.statussaver"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "86b8b7d2-eccd-413e-bf5a-adb5a8d080fe"
      }
    }
  }
}
